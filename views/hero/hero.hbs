{{#if user}}
<p class="text-info">This is your hero tab, {{user.email}}</p>
<table class="table text-white letter-edges">
  <thead>
    <tr>
      <th scope="col">Position</th>
      <th scope="col">Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Hero name</td>
      <td>{{hero.name}}</td>
    </tr>
    <tr>
      <td>Species</td>
      {{#if speciesId}}
      <td><a href="/species/{{speciesId}}">{{speciesName}}</a></td>
       {{else}}
      <td class="text-warning">This hero has no species, feeling sorry for him!</td>
       {{/if}}
    </tr>
    <tr>
      <td>Vehicle</td>
      {{#if hero.vehicle}}
      <td>{{hero.vehicle}}</td>
      {{else}}
      <td class="text-danger">This hero has no vehicle, feeling sorry for him!</td>
      {{/if}}
    </tr>
    <tr>
      <td>Starships</td>
      <td>{{hero.name}}</td>
    </tr>
    <tr>
      <td>Planets</td>
      <td>{{hero.homeworld}}</td>
    </tr>
    <tr>
      <td>Movies</td>
      <td>{{hero.films}}</td>
    </tr>
  </tbody>
</table>

{{/if}}