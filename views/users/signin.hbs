<form action="/user/signin" method='post' autocomplete="off">
<div class="text-white bg-danger">
    {{#if messages.error}}
          {{messages.error}}
    {{/if}}
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1" class="text-white">Email address</label>
        <input type="email" class="form-control " id="exampleInputEmail1" name="email" aria-describedby="emailHelp">
        <small id="emailHelp" class="form-text text-muted">Sign in  or not sign in. There is no try...</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1" class="text-white">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" name="password">
    <small id="emailHelp" class="form-text text-muted">...Powerful you will become</small>
    </div>
    
    <button type="submit" class="btn btn-primary">Sign in</button>
    
    
</form>